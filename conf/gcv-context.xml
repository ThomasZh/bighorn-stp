<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Datasource -->
	<bean id="globalConfigurationVariables" class="net.younguard.bighorn.broadcast.util.GlobalConfigurationVariables" >
		<property name="stpVersion" value="bighorn-stp-0.6.1" />
		<property name="stpPort" value="13103" />
		<property name="bufferSize" value="65535" />
	</bean>

</beans>